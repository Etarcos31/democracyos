- link = link || {}

.topic-link
  .link-row
    input(type='hidden', name='links[][_id]', value=link._id)
    .link-group.link-id
      input.form-control(type='text', name='links[][text]', value=link.text, placeholder=t('admin-topics-form.clause.label.text'))
    .link-group.link-url
      input.form-control(type='text', name='links[][url]', validate='url', value=link.url, placeholder=t('admin-topics-form.url'))
