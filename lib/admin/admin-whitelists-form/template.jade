#whitelist-wrapper
  .whitelist-admin
    h2= t(form.title)
    form.form.form-horizontal(action=form.action, method="post", role="form", autocomplete="off", autovalidate='autovalidate', autosubmit='autosubmit')
      ul.form-messages
      input(type='hidden',name='forum',value=forum.id)
      .form-group
        label.col-sm-2.control-label=t('admin-whitelist.type')
        div.col-sm-10
          - each type in [ 'email' ]
            label.radio-inline
              input(type='radio',name='type',value='email',checked=(whitelist.new || (whitelist.type == type)))
              span=type
      .form-group
        label.col-sm-2.control-label=t('admin-whitelist.value')
        div.col-sm-10
          - if (whitelist.id)
            input.form-control(type='text', name='value', value=whitelist.value, validate='required email')
          - else
            textarea.form-control(type='text', name='value', validate='required emails' placeholder=t('admin-whitelists-form.value.placeholder'))
      .form-group
        div.col-sm-offset-2.col-sm-10
          button.btn.btn-success=t('admin-whitelists-form.button.submit')
