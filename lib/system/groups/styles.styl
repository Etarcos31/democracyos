.group.update
  textarea
    resize vertical
  .help-block
    font-size 80%
    padding-left 1rem

.users-list
  padding 0

  .list-group-item
    padding 0

    .btn-badge
      background-color transparent

      &.admin
        background-color #448AFF
        border-color #448AFF
        color white

        &:hover
          background-color darken(#448AFF, 10%)
          border-color darken(#448AFF, 10%)

    .media-left > img
      max-width 48px
      height 48px

    .media-body > .flex-wrapper
      display flex
      align-items center

      .info
        flex-grow 1
        
      .actions
        flex-skrink 0
        padding 0 6px

        & > *
          margin 0 0.25em

input[type="text"]
  width 100%
  height 34px
  padding 6px 12px
  font-size 14px
  line-height 1.42857143
  color #555
  background-color #fff
  background-image none
  border 1px solid #ccc
  border-radius 4px
.displayedUsers
  display flex
  align-items center
  align-content center
  white-space nowrap
  margin-bottom .5em
  padding .5em
  font-size 1em
  border-radius 2px
  transition background-color .05s .05s

  &.revoking
    opacity .5

  &:hover
    background-color #f9f9f9

  img
    width 2.1em
    border-radius 2px

  p
    flex-grow 2
    margin 0 .5em
    font-weight bold
    text-overflow ellipsis
    overflow hidden
    cursor default
.Groupactions
  float right!important
  margin 10px
.deleteButton
  background-color transparent
  box-shadow none
  border-color transparent
  margin-left 10px
.addgroup
  background-color #27ae60
  border-radius 2px
.addButton
    color #fff
    border-color #4cae4c
    display inline-block
    padding 6px 12px
    margin-bottom 0
    font-size 14px
    font-weight 400
    line-height 1.42857143
    text-align center
    white-space nowrap
    vertical-align middle
    -ms-touch-action manipulation
    touch-action manipulation
    cursor pointer
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    background-image none
    border 1px solid transparent
.searchgroup
    display flex
.input-addon
    font-size 14px
    font-weight 400
    line-height 1
    color rgb(85, 85, 85)
    text-align center
    background-color rgb(238, 238, 238)
    padding 6px 12px
    border-width 1px
    border-style solid
    border-color rgb(204, 204, 204)
    border-image initial
    border-radius 4px
    border-top-right-radius 0
    border-bottom-right-radius 0
    border-right: 0
#searchInput
  border-radius 0px
#nullInput
  border 1px solid red

