.users-import
	display flex
	width 100%
	clear both
	margin-top 10px
	align-items baseline
	align-content space-around
	flex-wrap wrap
	a
		margin-right 10px
		@media only screen and (max-width: 500px)
			margin-bottom 10px
	.label-file
		padding 9px 12px
		#users-input-file
			display none
	.error-message
		width 100%
		p
			display inline-block
			color #961010
			padding 10px 5px
			margin 0 0 15px 0
      font-weight bold
			font-size 14px
			border-radius 2px
	.success-message
		width 100%
		p
			display inline-block
			color #27ae60
			padding 10px 5px
			margin 0 0 15px 0
			font-size 14px
      font-weight bold
			border-radius 2px
