.hub
  .cover
    padding-top 30px
    min-height 300px
    font-size 16px
    color #f9f9f9
    background-size cover
    background-repeat no-repeat
    background-position center top
    background-image unquote("url('https://democracyosorg.s3.amazonaws.com/cover-hands.jpg')")

    h1
     font-size 2.5em
    p
      font-weight 500

.hub-info-button
    margin-left 40%
    margin-bottom 5px

.hub-description, .hub-footer
  font-size 1.1rem
  margin-top 1em
  padding-bottom 1em

  h3
    margin 1em 0 5px
    & + p
      padding-left 1em
  ul
    display flex
    justify-content space-evenly

    list-style-type none
    margin-block-start 1em
    margin-block-end 0
    margin-inline-start 0
    margin-inline-end 0px
    padding-inline-start 0
    h3, h4
      margin 5px auto
    li
      display inline-block
      margin 0 5px
      & > * > a
        font-size 90%
        display inline-block
        margin 5px auto
        padding 5px 1em
        color #f9f9f9
        background-color primary_color
        border-radius 4px

.hub-forums-button
    margin 30px
.hub-associations-button
    margin-left 40%
    margin-bottom 5px
.logoImage
    height 150px
.list-groups
    display flex
    flex-wrap wrap
    justify-content center
.input-addon
    font-size 14px
    font-weight 400
    line-height 1
    color rgb(85, 85, 85)
    text-align center
    background-color rgb(238, 238, 238)s
    padding 6px 12px
    border-width 1px
    border-style solid
    border-color rgb(204, 204, 204)
    border-image initial
    border-radius 4px
    border-top-right-radius 0
    border-bottom-right-radius 0
    border-right: 0
.hub-container
    width 70%
    margin auto
.more-load
    background #f0f0f0
    margin 20px 0px
    width 100%

.group-link
    padding-left 20%
.hub-forums-view
    display flex

.help
    text-decoration underline
.hub-footer-roles
    display flex
    justify-content space-around
.footer-faq
    margin 30px

@import './*/styles'
