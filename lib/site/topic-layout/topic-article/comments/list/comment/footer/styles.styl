.actions
  display: flex
  justify-content: space-between
  padding-bottom 5px
  vertical-align middle
  .reply
    padding: 0
    color #4cae4c
    &:hover
      color #1c8045
    span.fa-stack
      font-size 65%
      display: inline-block
      .fa-inverse
        color white

  .btn
    &.btn-xs
      padding 5px
      margin 0 5px
      text-transform lowercase
      font-size 70%
      &:hover
        color #337ab7

  .replies-score, .share-links
    vertical-align middle
  .votes, .replies-score
    .score
      margin-right: .5em
      font-size: 1em

      span
        font-weight: bold

      small
        text-transform: lowercase
        color: #999
    button
      cursor: pointer
      border: 0
      background: transparent
    .share-links
      display: inline-block

      a
        color: black
        padding-left: 5px
        padding-right: 5px

        &:hover
          text-decoration: none
          color #337ab7

  .votes
    .upvote
      &.active,
      &:hover
        color: #A4CB53

    .downvote
      &.active,
      &:hover
        color: #D95E59
