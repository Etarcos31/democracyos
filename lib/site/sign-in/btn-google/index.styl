.btn-google
  color: #fff
  background: #ef5350
  background: unquote("linear-gradient(to bottom, #ef5350, #BC413F)")

  i
    font-size: 1.3em
    line-height: 0
    position: relative
    top: .1em
    margin-right: .3em

  &:hover
    opacity .9
    color #f7f7f7

  &:active
    opacity: 1
    color: #f7f7f7
    box-shadow: inset 0 0 8px rgba(#BC413F, .6)
